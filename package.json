{
  "name": "octokit-next",
  "version": "0.0.0-development",
  "description": "Experimental Octokit SDK for exploration only - DO NOT USE 🚫⚠️",
  "type": "module",
  "author": "Gregor Martynus (https://twitter.com/gr2m)",
  "license": "MIT",
  "repository": "github:octokit/octokit-next.js",
  "types": "./index.d.ts",
  "exports": "./index.js",
  "scripts": {
    "test": "npm run test:code && npm run test:dts && npm run test:ts && npm run test:coverage",
    "test:code": "c8 node test.js",
    "test:coverage": "c8 check-coverage",
    "test:dts": "for d in tests/js/* ; do echo $d; tsd $d; if [ $? -eq 0 ]; then echo ok; else exit 1; fi; done",
    "test:ts": "for d in tests/ts/*/tsconfig.json ; do echo $d; tsc -p $d; if [ $? -eq 0 ]; then echo ok; else exit 1; fi; done"
  },
  "renovate": {
    "extends": [
      "github>gr2m/.github"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "packages/*/package.json"
          ]
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "packages/types"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "packages/request"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "packages/core"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "packages/types-rest-api-ghes-3.0"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "packages/types-rest-api-ghes-3.1"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "packages/types-rest-api-github.com"
        }
      ]
    ]
  },
  "devDependencies": {
    "c8": "^7.7.3",
    "tsd": "^0.17.0",
    "typescript": "^4.3.5",
    "uvu": "^0.5.1"
  },
  "workspaces": [
    "packages/types",
    "packages/core",
    "packages/types-rest-api-github.com",
    "packages/types-rest-api-ghes-3.1",
    "packages/types-rest-api-ghes-3.0",
    "packages/request"
  ],
  "engines": {
    "node": ">=16.5.0",
    "npm": ">=7.17.0"
  }
}
